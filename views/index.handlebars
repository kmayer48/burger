<div class="container">
    <!-- Jumbotron Heading -->
    <div class="jumbotron text-center">
        <h1 id="color-override">Eat Da Burger!</h1>
        <hr>
        <img src="http://www.myiconfinder.com/uploads/iconsets/256-256-8a98392e8674eb71887ee57b861dd1c0-Burger.png" alt="Hamburger">
        <p id="color-override">Hope you're hungry.</p>
        <br>
        <h2 id="color-override">Make a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                    <button type="submit" class="btn btn-info" id="addburger"><i class="fas fa-hamburger"></i></button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center" id="lefthead"><strong>Burgers Ready to Eat</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong>{{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-primary" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="fas fa-utensils"></i></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong>{{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="fas fa-trash-alt"></i></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>